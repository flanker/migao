.container
  = form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {class: 'form-login'}) do |f|
    %h2 注册
    = render 'shared/error', object: resource
    %div
      = f.label :name, '用户名', class: 'required'
      = f.text_field :name, :autofocus => true
    %div
      = f.label :email, '邮箱', class: 'required'
      = f.email_field :email
    %div
      = f.label :password, '密码', class: 'required'
      = f.password_field :password
    %div
      = f.label :password_confirmation, '确认密码', class: 'required'
      = f.password_field :password_confirmation

    %div= f.submit '立即注册', class: 'btn btn-primary btn-large'
